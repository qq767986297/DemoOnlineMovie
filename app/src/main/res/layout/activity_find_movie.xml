<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    tools:context=".activity.FindMovieActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:id="@+id/home_search_back"
            android:layout_marginLeft="28dp"
            android:layout_height="24dp"
            android:src="@mipmap/jian"/>
        <EditText
            android:layout_width="250dp"
            android:id="@+id/et_home_search"
            android:background="@drawable/home_search"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="24dp"
            android:layout_height="30dp" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:id="@+id/rv_home_search"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/ll_home_search"
       android:orientation="vertical">
       <ImageView
           android:layout_width="164dp"
           android:layout_marginTop="143dp"
           android:layout_height="164dp"
           android:src="@mipmap/notabout"
           android:layout_marginLeft="97dp"/>
       <TextView
           android:layout_width="120dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="23dp"
           android:textSize="14sp"
           android:textColor="@android:color/white"
           android:text="没有相关搜索结果换个词试试吧"
           android:layout_marginLeft="124dp"
           />
   </LinearLayout>

</LinearLayout>