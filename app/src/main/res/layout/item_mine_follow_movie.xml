<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#1C2243"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="84dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            fresco:failureImage="@mipmap/ic_launcher"
            fresco:placeholderImage="@mipmap/ic_launcher"
            android:id="@+id/iv_item_mine_movie"
            android:layout_height="101dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:id="@+id/tv_item_mine_movie_name"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_item_mine_movie"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_item_mine_movie_director"
            android:textColor="@android:color/white"
            android:layout_below="@id/tv_item_mine_movie_name"
            android:layout_toRightOf="@id/iv_item_mine_movie"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_item_mine_movie_star"
            android:textColor="@android:color/white"
            android:layout_below="@id/tv_item_mine_movie_director"
            android:layout_toRightOf="@id/iv_item_mine_movie"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_item_mine_movie_score"
            android:textColor="@android:color/white"
            android:layout_below="@id/tv_item_mine_movie_star"
            android:layout_toRightOf="@id/iv_item_mine_movie"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
</RelativeLayout>