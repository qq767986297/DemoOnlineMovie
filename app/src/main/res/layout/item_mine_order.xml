<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_marginTop="20dp"
          android:background="#1C2243"
          android:layout_height="98dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@android:color/white"
              android:textStyle="bold"
              android:id="@+id/tv_item_mine_order_name"
              android:layout_marginTop="14dp"
             android:layout_marginLeft="118dp"/>
          <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="10sp"
          android:textColor="@android:color/white"
          android:textStyle="bold"
          android:layout_below="@id/tv_item_mine_order_name"
          android:id="@+id/tv_item_mine_order_time"
          android:layout_marginTop="11dp"
          android:layout_marginLeft="118dp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10sp"
              android:textColor="@android:color/white"
              android:textStyle="bold"
              android:layout_below="@id/tv_item_mine_order_time"
              android:id="@+id/tv_item_mine_order_want"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="118dp"/>
      </RelativeLayout>
  </RelativeLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        fresco:failureImage="@mipmap/ic_launcher"
        fresco:placeholderImage="@mipmap/ic_launcher"
        android:id="@+id/iv_item_order"
        android:layout_height="108dp" />
</RelativeLayout>