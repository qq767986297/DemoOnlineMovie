<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:drawer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent"
    android:id="@+id/rl_detail_parent"
    tools:context=".activity.MoviesDetailActivity">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        fresco:placeholderImage="@mipmap/ic_launcher"
        fresco:failureImage="@mipmap/ic_launcher"
        android:id="@+id/iv_detail"
        android:layout_height="500dp" />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/iv_detail_back"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="28dp"
        android:src="@mipmap/jian"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ping"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="459dp"
        android:textSize="12sp"
        android:text="评分"
        android:textColor="@android:color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail_scroe"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_ping"
        android:layout_marginTop="459dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="231dp"
        android:layout_marginTop="459dp"
        android:textSize="12sp"
        android:layout_toLeftOf="@id/tv_detail_comment"
        android:layout_marginRight="10dp"
        android:text="评论"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_detail_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="459dp"
        android:layout_marginRight="50dp"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_below="@id/iv_detail">
        <TextView
            android:layout_marginTop="7dp"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_name"
            android:textColor="@android:color/white"
            android:text="复仇者联盟"
            android:textSize="14sp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:id="@+id/tv_detail_type"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="复仇者联盟"
            android:layout_below="@id/tv_detail_name"
            android:textSize="12sp"/>
        <TextView
            android:layout_marginTop="36dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="复仇者联盟"
            android:id="@+id/tv_detail_duration"
            android:layout_toRightOf="@id/tv_detail_type"

            android:textSize="12sp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="复仇者联盟"
            android:id="@+id/tv_detail_time"
            android:layout_below="@id/tv_detail_type"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="29dp"
            android:id="@+id/iv_focus"
            android:src="@mipmap/emptyheart2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:id="@+id/tv_follow"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/iv_focus"
            android:layout_marginRight="24dp"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"/>
        <!--<ImageView-->
            <!--android:layout_width="14dp"-->
            <!--android:layout_height="6dp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:src="@mipmap/pull"-->
            <!--android:id="@+id/iv_detail_pull"-->
            <!--android:layout_below="@id/tv_detail_time"-->
            <!--android:layout_centerHorizontal="true"/>-->
    </RelativeLayout>
    <com.bw.movie.custom.DrawerLayout

        android:id="@+id/dl"
        android:layout_above="@id/llll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        drawer:DrawerLayoutContent_ID="@+id/drawerContent"
        drawer:DrawerLayoutHandler_ID="@+id/drawerHandle"
        drawer:DrawerLayout_ID="@+id/drawer2">
        <RelativeLayout
            android:id="@+id/drawer2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="@dimen/dp13"
                android:layout_height="@dimen/dp6"
                android:id="@+id/drawerHandle"
                android:src="@mipmap/pull"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp" />


            <LinearLayout
                android:id="@+id/drawerContent"
                android:layout_width="fill_parent"
                android:layout_height="700dp"
                android:gravity="bottom"
                android:layout_below="@+id/drawerHandle"
                android:background="#141931"
                android:orientation="vertical">
                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:id="@+id/tb_detail"
                    android:background="#1C2243"
                    app:tabTextColor="#FDFDFE"
                    android:layout_height="@dimen/dp50">

                </android.support.design.widget.TabLayout>
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/vp_detail"
                    android:layout_height="@dimen/dp0">

                </android.support.v4.view.ViewPager>
            </LinearLayout>

        </RelativeLayout>
    </com.bw.movie.custom.DrawerLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/llll"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="写影评"
            android:id="@+id/bt_detail_write"
            android:layout_weight="0"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="#e8be18"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="选座购票"
            android:id="@+id/bt_detail_buy"
            android:layout_weight="0"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="#e8185e"/>
    </LinearLayout>

</RelativeLayout>