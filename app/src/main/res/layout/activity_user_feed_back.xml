<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".activity.UserFeedBackActivity">
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/jian"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="28dp"
        android:id="@+id/iv_mine_feedback_back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意见反馈"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:textSize="12sp"
        android:gravity="start"
        android:textColor="@android:color/white"
        android:id="@+id/et_feedback"
        android:textColorHint="@android:color/white"
        android:hint="   写下您对产品的感受吧!工作人员将会在第一时间评估处理."
        android:background="@drawable/edittext_addmoviecomment"
        android:layout_marginTop="24dp"
        android:layout_below="@id/iv_mine_feedback_back"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"/>
    <Button
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bt_buy_shape"
        android:text="提交"
        android:id="@+id/bt_mine_feedback"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/et_feedback"
        android:layout_alignParentRight="true"/>
</RelativeLayout>