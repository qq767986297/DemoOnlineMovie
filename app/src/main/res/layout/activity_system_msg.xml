<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".activity.SystemMsgActivity">
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/jian"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="28dp"
        android:id="@+id/iv_systemmsg_back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统消息"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="312dp"
        android:layout_below="@id/iv_systemmsg_back"
        android:id="@+id/rv_systemmsg"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"></android.support.v7.widget.RecyclerView>
</RelativeLayout>