<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_loca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/icon_location"/>
    <TextView
        android:id="@+id/tv_fragment_cinema_detail_location"
        android:layout_toRightOf="@id/iv_loca"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/iv_loca"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="4dp"
        android:textColor="#FDFDFE"
        android:text="海淀区"/>
    <ImageView
        android:id="@+id/iv_dianhua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_loca"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/iv_loca"
        android:src="@mipmap/dianhua"/>
    <TextView
        android:id="@+id/tv_tv_fragment_cinema_detail_call"
        android:layout_toRightOf="@id/iv_dianhua"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/iv_dianhua"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:textColor="#FDFDFE"
        android:text="12312312312"/>
    <TextView
        android:id="@+id/tv_luxian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FDFDFE"
        android:layout_below="@id/iv_dianhua"
        android:layout_alignLeft="@id/iv_dianhua"
        android:layout_marginTop="20dp"
        android:text="乘车路线"/>
    <TextView
        android:id="@+id/tv_tv_fragment_cinema_detail_line"
        android:layout_below="@id/tv_luxian"
        android:layout_alignLeft="@id/tv_luxian"
        android:layout_marginTop="20dp"
        android:textColor="#FDFDFE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>