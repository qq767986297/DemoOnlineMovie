<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="#0E162B"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/rl_1">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="328dp"
           android:background="@mipmap/login_bg"/>
       <ImageView
           android:layout_width="16dp"
           android:layout_height="16dp"
           android:layout_marginLeft="28dp"
           android:src="@mipmap/jian"
           android:layout_marginTop="47dp"/>
   </RelativeLayout>

       <EditText
           android:layout_below="@id/rl_1"
           android:layout_width="330dp"
           android:layout_height="44dp"
           android:layout_marginRight="44dp"
           android:layout_marginLeft="24dp"
           android:hint="请输入邮箱账号"
           android:background="@drawable/edittext_shape"
           android:textSize="14sp"
           android:paddingLeft="20dp"
           android:id="@+id/et_login_email"
           android:textColorHint="@android:color/darker_gray"
           android:textColor="@android:color/darker_gray"
           />


            <EditText
            android:layout_marginTop="10dp"
                android:layout_width="216dp"
                android:paddingLeft="20dp"
                android:layout_height="44dp"
                android:layout_below="@id/et_login_email"
                android:layout_marginLeft="24dp"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:background="@drawable/edittext_shape2"
                android:hint="请输入密码"
                android:id="@+id/et_login_pwd"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/darker_gray"
                />
            <Button
                android:text="忘记密码"
                android:layout_marginTop="10dp"
                android:background="@drawable/bt_shape"
                android:textSize="12sp"
                android:layout_below="@id/et_login_email"
                android:layout_toRightOf="@id/et_login_pwd"
                android:id="@+id/bt_login_forget"
                android:layout_width="96dp"
                android:layout_height="44dp" />


        <TextView
            android:layout_width="84dp"
            android:layout_height="14dp"
            android:layout_marginLeft="252dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="24dp"
            android:text="暂无账号 立即注册"
            android:layout_below="@id/bt_login_forget"
            android:id="@+id/tv_login_reg"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"/>


       <Button
           android:layout_width="312dp"
           android:text="登录"
           android:textColor="@android:color/white"
           android:background="@drawable/bt_login_shape"
           android:textSize="16sp"
           android:layout_below="@id/tv_login_reg"
           android:id="@+id/bt_login"
           android:layout_marginTop="12dp"
           android:layout_marginLeft="24dp"
           android:layout_height="44dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:layout_below="@id/bt_login"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="93dp"
            android:layout_height="3dp"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="73dp"
            android:background="@android:color/white"
            ></LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="或"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"

            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="93dp"
            android:layout_height="3dp"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="7dp"
            android:background="@android:color/white"
            ></LinearLayout>
    </LinearLayout>

      <ImageButton
          android:layout_marginTop="20dp"
          android:layout_below="@id/ll"
          android:layout_width="312dp"
          android:layout_marginLeft="24dp"
          android:background="@drawable/bt_wechat_shape"
          android:src="@mipmap/weixin_copy_3"
          android:layout_height="44dp" />

</RelativeLayout>