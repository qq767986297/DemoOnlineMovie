<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".activity.MineSettingActivity">
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="28dp"
        android:id="@+id/iv_mine_setting_back"
        android:src="@mipmap/jian"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="312dp"
        android:id="@+id/rl1"
        android:layout_marginTop="24dp"
        android:layout_below="@id/iv_mine_setting_back"
        android:layout_centerHorizontal="true"
        android:background="#1C2243"
        android:layout_height="95dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:id="@+id/tv_qc"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="清除缓存"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:id="@+id/tv_mine_setting_cache"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="10M"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_below="@id/tv_qc"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="版本更新"/>
        <ImageView
            android:layout_width="7dp"
            android:src="@mipmap/shape_2"
            android:id="@+id/iv_mine_setting_update"
            android:layout_marginRight="20dp"
            android:layout_marginTop="24dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_mine_setting_cache"
            android:layout_height="12dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="57dp"
        android:id="@+id/rl2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl1"
        android:background="#1C2243">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="重置密码"/>
        <ImageView
            android:layout_width="7dp"
            android:src="@mipmap/shape_2"
            android:id="@+id/iv_mine_setting_reset"
            android:layout_marginRight="20dp"
            android:layout_marginTop="24dp"
            android:layout_alignParentRight="true"
            android:layout_height="12dp" />
    </RelativeLayout>
    <Button
        android:layout_width="312dp"
        android:layout_centerHorizontal="true"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:background="#1C2243"
        android:text="退出登录"
        android:id="@+id/bt_mine_setting_quit"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_below="@id/rl2"/>
</RelativeLayout>