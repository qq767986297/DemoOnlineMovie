<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".activity.AddMovieCommentActivity">
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="18dp"
        android:src="@mipmap/jian"
        android:layout_marginLeft="28dp"
        android:id="@+id/iv_addmoviecomment_back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写评价"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:background="#1C2243"
       android:layout_marginTop="20dp"
       android:id="@+id/rl_addcomment"
       android:layout_below="@id/iv_addmoviecomment_back"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="38dp"
           android:layout_centerVertical="true"
           android:paddingTop="9dp"
           android:layout_marginTop="9dp"
           android:textSize="14sp"
           android:id="@+id/tv_add_movie_comment_name"
           android:layout_marginLeft="20dp"
           android:textColor="@android:color/white"/>
   </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/rl_addcomment"
        android:id="@+id/tv_add_movie_comment_score"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:numStars="5"
        android:layout_marginTop="14dp"
        android:id="@+id/rb_add_movie_comment"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/tv_add_movie_comment_score"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:id="@+id/tv_add"
        android:text="写点评价吧"
        android:layout_marginTop="52dp"
        android:layout_below="@id/rb_add_movie_comment"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/white"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:id="@+id/et_add_movie_comment_context"
        android:layout_height="129dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/edittext_addmoviecomment"
        android:layout_below="@id/tv_add"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="24dp"
        android:text="提交"
        android:textSize="14sp"
        android:id="@+id/bt_add_movie_comment"
        android:textColor="@android:color/white"
        android:layout_marginRight="24dp"
        android:layout_marginTop="143dp"
        android:background="@drawable/bt_buy_shape"
       android:layout_below="@id/et_add_movie_comment_context"/>
</RelativeLayout>