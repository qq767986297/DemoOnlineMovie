<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".activity.HomeMoreMovieActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="44dp"
        android:layout_height="24dp">
        <ImageView
            android:layout_width="20dp"
            android:id="@+id/iv_home_more_back"
            android:layout_marginLeft="28dp"
           android:src="@mipmap/jian"
            android:layout_height="24dp" />
        <EditText
            android:layout_width="250dp"
            android:id="@+id/et_more_search"
            android:background="@drawable/home_search"
            android:layout_marginLeft="42dp"
            android:textSize="12sp"
            android:hint=" 请输入影片名称"
            android:layout_toLeftOf="@id/iv_home_more_serach"
            android:layout_marginRight="24dp"
            android:layout_height="30dp" />
        <ImageView
            android:layout_width="17dp"
            android:src="@mipmap/icon_search"
            android:layout_height="20dp"
            android:id="@+id/iv_home_more_serach"
            android:layout_marginRight="27.5dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="#1C2243"
        android:id="@+id/tb_more"
        app:tabTextColor="@android:color/white"
        android:layout_height="38dp"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/vp_more"></android.support.v4.view.ViewPager>
</LinearLayout>