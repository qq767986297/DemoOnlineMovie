<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#141931"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".activity.UserInfoActivity">
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/jian"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="28dp"
        android:id="@+id/iv_mine_userinfo_back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="#1C2243"
        android:id="@+id/rl"
        android:layout_below="@id/iv_mine_userinfo_back"
        android:layout_marginLeft="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="头         像"
            android:id="@+id/tv_tou"
            android:textColor="@android:color/white"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="昵         称"
            android:layout_below="@id/tv_tou"
            android:id="@+id/tv_ni"
            android:textColor="@android:color/white"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="性         别"
            android:layout_below="@id/tv_ni"
            android:id="@+id/tv_xing"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="出生日期"
            android:layout_below="@id/tv_xing"
            android:id="@+id/tv_chu"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            fresco:roundAsCircle="true"
            android:id="@+id/iv_mine_userinfo"
            fresco:placeholderImage="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="21dp"
            android:text="000000"
            android:id="@+id/tv_mine_userinfo_name"
            android:layout_below="@id/iv_mine_userinfo"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="000000"
            android:id="@+id/tv_mine_userinfo_sex"
            android:layout_marginTop="22dp"
            android:layout_below="@id/tv_mine_userinfo_name"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="000000"
            android:layout_marginTop="22dp"
            android:id="@+id/tv_mine_userinfo_time"
            android:layout_below="@id/tv_mine_userinfo_sex"
            android:textSize="14sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#1C2243"
        android:layout_marginTop="10dp"
        android:layout_height="95dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="手  机   号"
            android:id="@+id/tv_shou"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="邮         箱"
            android:id="@+id/tv_you"
            android:layout_below="@id/tv_shou"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="000000"
            android:layout_marginTop="21dp"
            android:id="@+id/tv_mine_userinfo_phone"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="000000"
            android:layout_below="@id/tv_mine_userinfo_phone"
            android:layout_marginTop="21dp"
            android:id="@+id/tv_mine_userinfo_eamil"
            android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>