<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_item_select_cinema"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#1C2243"
        android:layout_height="90dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:id="@+id/iv_item_select_cinema"
            fresco:placeholderImage="@mipmap/ic_launcher"
            fresco:failureImage="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_item_select_cinema_name"
            android:text="啊实打实"
            android:layout_toRightOf="@id/iv_item_select_cinema"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:id="@+id/tv_item_select_cinema_address"
            android:text="啊实打实"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/iv_item_select_cinema"
            android:layout_below="@id/tv_item_select_cinema_name"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
</RelativeLayout>