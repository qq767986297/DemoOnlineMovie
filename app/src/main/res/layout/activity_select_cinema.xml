<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".activity.SelectCinemaActivity">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:id="@+id/iv_select_cinema"/>
    <ImageView
        android:id="@+id/iv_select_cinema_back"
        android:layout_width="16dp"
        android:src="@mipmap/jian"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="28dp"
        android:layout_height="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        android:text="复仇者联盟"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_select_cinema"
        android:id="@+id/tv_select_cinema_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        android:text="时长"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_select_cinema_name"
        android:id="@+id/tv_shi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        android:text="联盟"
        android:layout_marginTop="6dp"
        android:layout_below="@id/tv_shi"
        android:id="@+id/tv_select_cinema_time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="127dp"
        android:text="评分"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_select_cinema_name"
        android:id="@+id/tv_ping"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="127dp"
        android:text="联盟"
        android:layout_marginTop="6dp"
        android:layout_below="@id/tv_shi"
        android:id="@+id/tv_select_cinema_score"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="216dp"
        android:text="评分"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_select_cinema_name"
        android:id="@+id/tv_dao"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="216dp"
        android:text="联盟"
        android:layout_marginTop="6dp"
        android:layout_below="@id/tv_dao"
        android:id="@+id/tv_select_cinema_dictor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#1C2243"
        android:layout_marginTop="20dp"
        android:id="@+id/rl_select_cinema"
        android:layout_below="@id/tv_select_cinema_dictor"
        android:layout_height="44dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/tv_select_cinema_region"
            android:text="海淀区▼"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="111dp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/tv_select_cinema_day"
            android:text="今天 05-10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/tv_select_cinema_price"
            android:text="价格最低"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="312dp"
            android:id="@+id/iv_select_cinema_search"
            android:layout_marginRight="24dp"
            android:src="@mipmap/icon_search"/>

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="312dp"
        android:layout_marginTop="20dp"
        android:id="@+id/rv_select_cinema"
        android:layout_below="@id/rl_select_cinema"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</RelativeLayout>